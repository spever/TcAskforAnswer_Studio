<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
         android:layout_width="match_parent"
    	 android:layout_height="@dimen/top_bar_height2"
         android:background="#ffffff"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/find_pass_title"
            android:textSize="@dimen/top_title_textsize"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            />
        
        <ImageView 
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/back_left"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_view_color"
        />

</LinearLayout>
