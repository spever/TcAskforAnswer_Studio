<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin" 
        android:background="@color/background_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_margin_left"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/item_header_info"
        style="@style/textstyle2"
        android:id="@+id/numview"
        android:textSize="@dimen/textsize4" />

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_view_color"
         />
</LinearLayout>
