<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/dialog_cancle"
            android:layout_width="@dimen/diglog_cancle_size"
            android:layout_height="@dimen/diglog_cancle_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_tab"
            android:src="@drawable/cancle" />
    </RelativeLayout>

    <com.tuanche.askforanswer.source.view.CircularImage
        android:id="@+id/dialog_iv"
        android:layout_width="@dimen/diglog_iv_size"
        android:layout_height="@dimen/diglog_iv_size"
        android:layout_marginTop="@dimen/diglog_margin_top"
        android:src="@drawable/head_user" />

    <TextView
        android:id="@+id/dialog_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/diglog_margin_top"
        android:layout_marginLeft="@dimen/diglog_margin_top"
        android:layout_marginRight="@dimen/diglog_margin_top"
        android:layout_marginTop="40dp"
        android:text="@string/audit_ed"
        android:textColor="@color/textcolor3"
        android:textSize="@dimen/textsize3" />

</LinearLayout>