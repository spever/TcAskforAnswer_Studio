<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:id="@+id/main"
    android:orientation="vertical" >
    
	<RelativeLayout 
         android:layout_width="match_parent"
    	 android:layout_height="@dimen/top_bar_height"
         android:background="#ffffff"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="关于我们"
            android:textSize="@dimen/top_title_textsize"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            />
        
        <ImageView 
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/icon_back2"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_tab"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        
        <ImageView 
            android:layout_width="100dip"
      		android:layout_height="100dip"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            />
        <TextView 
            android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:layout_marginTop="15dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:textColor="@color/textcolor2"
            android:text="@string/about_ous_text"
            />

<RadioGroup
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/rg_runningnet"
    android:visibility="gone">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "http://test2.mapi.tuanche.com/sold"
        android:id="@+id/rb_test2"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "http://testyangche.tuanche.com/sold"
        android:id="@+id/rb_tesyangche"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "http://test.mapi.tuanche.com/sold"
        android:id="@+id/rb_test"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "http://mapi.tuanche.com/sold"
        android:id="@+id/rb_line"/>
    </RadioGroup>
    </LinearLayout>
         	
</LinearLayout>
