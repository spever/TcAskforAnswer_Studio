<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
     >
    <RelativeLayout android:layout_height="@dimen/common_height_300"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/rl_audio_dialog"
        android:background="#eeeeee"
        android:visibility="gone">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_auditContent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_gravity="center"
        android:text="FJSIFOW#JRWE{RWP"
        android:textColor="@color/text_color"
        android:textSize="@dimen/textsize4"/>
        <Button
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/submit_button"
            android:textSize="@dimen/textsize5"
            android:text="lallallal"
            android:textColor="@color/text_color"
            android:layout_marginTop="@dimen/paddingTop_40"
            android:layout_below="@id/tv_auditContent"
            android:layout_alignLeft="@id/tv_auditContent"
            android:layout_alignRight="@id/tv_auditContent"
            android:visibility="visible"
            android:padding="10dp"
            android:id="@+id/btn_auditGuide"/>
    </RelativeLayout>
	<View android:layout_width="match_parent" 
	    android:layout_height="15dp"/>
    <com.tuanche.askforanswer.source.view.GridViewForScrollView
        android:id="@+id/grid_ask_kind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="8dp"
        android:numColumns="4"
        android:layout_margin="10dp"
        android:stretchMode="columnWidth"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="10dp" />

    <TextView android:layout_width="match_parent" 
        android:layout_height="40dp" 
        android:background="@color/background_gray"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/reply_number"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor2"
        android:text="@string/item_people_ask"
        android:textSize="@dimen/textsize3"
        android:layout_gravity="center_vertical"
        />
    
    
</LinearLayout>